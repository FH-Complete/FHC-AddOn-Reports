% cover
\def\DBKcover{
	\ifthenelse{\equal{\DBKedition}{}}{\def\edhead{}}{\def\edhead{Ed. \DBKedition}}

	\setlength{\oldbaselineskip}{\baselineskip}
	\setlength{\baselineskip}{2\oldbaselineskip}
	\textsf{
		\vfill
		\textcolor{headercolor}{\Huge{\textbf{\DBKtitle}}}\\
			\ifx\DBKsubtitle\relax\else
				\underline{\ \ \ \ \ \ \ \ \ \ \ }\\
				\ \\
			 \parbox{15cm}{\hyphenpenalty=10000{\textcolor{headercolor}{\large{\textbf{\DBKsubtitle}}}}}\\
			\fi
		\vfill
		\setlength{\baselineskip}{\oldbaselineskip}
		\hspace{1cm}
		\vspace{1cm}
		\begin{center}
		\begin{tabular}{p{7cm} p{7cm}}
		\Large{\DBKreference{} \edhead} & \\
		\end{tabular}
		\end{center}
		\vspace{2cm}
		\lfoot[]{}
		\includegraphics[width=0.28\textwidth]{/ABSOLUTE/PATH/TO/LOGO/logo_250x130.png}\\
	}

	% format for the other pages
	\newpage
	\setlength{\baselineskip}{\oldbaselineskip}
	\lfoot[]{}
}





